<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MBus.Splash" parent="Theme.SplashScreen">
        <!-- Some emulators have trouble switching themes. Hardcode no action bar in the splash theme -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="postSplashScreenTheme">@style/Theme.MBus</item>
        <item name="android:windowSplashScreenBehavior" tools:ignore="NewApi">icon_preferred</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
    </style>
</resources>
